<UserControl
    x:Class="PartsBox.Views.ParameterInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PartsBox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Margin="10 5 5 5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="18"
            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ParameterInputControl}}, Path=ParameterLabelName}"/>
        <TextBox
            Grid.Column="1"
            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ParameterInputControl}}, Path=TextBoxValue}"
            Width="200"
            Margin="5 5 5 5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"/>
    </Grid>
</UserControl>
